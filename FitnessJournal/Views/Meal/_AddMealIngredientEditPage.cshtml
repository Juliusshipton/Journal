@model FitnessJournal.Controllers.MealEditViewModel


<div class="modal-header">
    <div>
        <h5 class="modal-title">New Meal Ingredient</h5>
    </div>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
</div>

<div class="container">
    <form asp-action="AddMealIngredientEdit">

        <div class="row">
            <div class="col">
                <input type="hidden" asp-for="MealId" />
                <input type="hidden" asp-for="Name" />
                <input type="hidden" asp-for="Description" />
                <div class="form-group">
                    <label asp-for="Ingredient" class="control-label"></label>
                    @Html.DropDownListFor(model => model.IngredientId, (IEnumerable<SelectListItem>)ViewData["AllIngredients"], "Select Ingredient", new { @class = "form-control" })
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Add" class="btn btn-primary" />
        </div>

    </form>
</div>